<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ProfilActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linlayProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/linlayProfil1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linlayProfil"
                    android:orientation="vertical">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pp"
                    android:layout_width="250dp"
                    android:layout_height="230dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/frq"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_below="@id/pp"
                    android:id="@+id/namaSaya"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Fariq Naufal Diaz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    fontPath="fonts/Poppins-Bold.otf"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:layout_below="@id/namaSaya"
                    android:id="@+id/emailDicoding"
                    android:layout_marginBottom="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="fariqn.diaz22@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    fontPath="fonts/Poppins-Bold.otf"
                    tools:ignore="MissingPrefix"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>