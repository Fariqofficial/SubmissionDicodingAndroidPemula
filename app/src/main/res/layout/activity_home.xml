<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@android:color/white"
            android:id="@+id/relay_judul"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:id="@+id/judul"
                android:text="Hero Arena of Valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fontPath="fonts/Poppins-Bold.otf"
                tools:ignore="MissingPrefix"/>

            <ImageView
                android:id="@+id/icProfil"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profil"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/relay_judul"
            android:id="@+id/linearLayout_archer"
            android:clipToPadding="false"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_archer"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <RelativeLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_archer"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/archer"/>

                    <TextView
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/ic_archer"
                        android:layout_marginTop="15dp"
                        android:text="Archer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linearLayout_archer"
            android:id="@+id/linearLayout_mage"
            android:clipToPadding="false"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_mage"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <RelativeLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_mage"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/mage"/>

                    <TextView
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/ic_mage"
                        android:layout_marginTop="15dp"
                        android:text="Mage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linearLayout_mage"
            android:id="@+id/linearLayout_warrior"
            android:clipToPadding="false"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_warrior"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <RelativeLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_warrior"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/warrior"/>

                    <TextView
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/ic_warrior"
                        android:layout_marginTop="15dp"
                        android:text="Warrior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linearLayout_warrior"
            android:id="@+id/linearLayout_tank"
            android:clipToPadding="false"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_tank"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <RelativeLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_tank"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/tank"/>

                    <TextView
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/ic_tank"
                        android:layout_marginTop="15dp"
                        android:text="Tank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linearLayout_tank"
            android:id="@+id/linearLayout_assasin"
            android:clipToPadding="false"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_assasin"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <RelativeLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_assasin"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/assasin"/>

                    <TextView
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/ic_assasin"
                        android:layout_marginTop="15dp"
                        android:text="Assasin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/linearLayout_assasin"
            android:id="@+id/linearLayout_support"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_support"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <RelativeLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_support"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/support"/>

                    <TextView
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/ic_support"
                        android:layout_marginTop="15dp"
                        android:text="Support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>